					<value>/CAT-PDP-GRUP6/pages/public/registerPassengerView.xhtml</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/pages/public/registerDriverView.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>errorView</from-outcome>
			<to-view-id>/pages/public/errorView.xhtml</to-view-id>
